@using Microsoft.AspNetCore.Identity
@using FermView.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-nav mr-auto">
        <a class="btn btn-link nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard" title="Home">Dashboard</a>
    </div>
    <span class="navbar-text">Welcome, @UserManager.GetUserName(User)!</span>
    <a class="btn btn-link nav-item nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Account</a>

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right ">

        
        <button type="submit" class="btn btn-link nav-item nav-link">Log out</button>

    </form>
}
else
{
    <ul class="navbar-nav">
        <li><a class="nav-item nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="nav-item nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
